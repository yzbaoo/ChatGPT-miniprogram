/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
}
.gpt-chat-container {
  flex: 1;
  /* height: 100%; */
  /* padding-bottom: 350rpx; */
  /* height: 100vh; */
  /* box-sizing: border-box; */
   overflow-y: auto;
}
.gpt-input-container {
  width: 100%;
  height: 300rpx;
  background-color: rgba(255,255,255,1);
  border: 0 solid #d9d9e3;
  box-sizing: border-box;
  border-top-width: 1px;
  padding: 0 20rpx;
  padding-top: 10rpx;
  /* position: fixed;
  bottom: 50rpx;
  left: 0; */
}
.gpt-input-operation {
  padding: 0 10rpx;
}
.gpt-input {
  box-shadow:0 0 10rpx rgba(0,0,0,.1);
  height: 70rpx;
  margin: 10rpx 0;
  border: 1rpx solid rgba(0,0,0,.1);
  border-radius: 10rpx;
  padding: 0 10rpx;
}
.gpt-tips {
  font-size: 20rpx;
  color: rgba(0,0,0,.5);
  text-align: center;
}
.gpt-chat-item {
  padding: 40rpx;
  display: flex;
}
.gpt-chat-item.ai {
  background-color: #f7f7f8;
}
.avator {
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: rgba(91,109,193,1);
  color: #FFF;
  font-size: 25rpx;
  font-weight: bold;
  border-radius: 5rpx;
} 
.avator.ai {
  background-color: rgb(10,163,127);
  background: url('data:image/png;base64,') no-repeat;
  background-size: cover;
}
.message {
  margin-left: 40rpx;
  color: #343541;
  flex: 1;
  line-height: 50rpx;
}

.dot-loader {
  -webkit-animation: 1.2s grow ease-in-out infinite;
  animation: 1.2s grow ease-in-out infinite;
}

.dot-loader--2 {
  -webkit-animation: 1.2s grow ease-in-out infinite 0.15555s;
  animation: 1.2s grow ease-in-out infinite 0.15555s;
}
.dot-loader--3 {
  -webkit-animation: 1.2s grow ease-in-out infinite 0.3s;
  animation: 1.2s grow ease-in-out infinite 0.3s;
}
.dot-loader-item {
  opacity: 0;
  animation:show;
  animation-delay: 0.5s;
  animation-fill-mode: forwards;
}
@keyframes show {
  100% {
    opacity: 1
  }
}
@keyframes grow {
  0%, 40%, 100% {
    opacity: 0
  }
  40% {
    opacity: 1
  }
}

.loading {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #FFF;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  animation: hidden 0.5s linear 3s forwards;
}
.loading-logo {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

@keyframes hidden {
  0% {
    opacity: 0.9;
  }
  100% {
    opacity: 0;
    display: none;
    visibility: hidden;
  }
}